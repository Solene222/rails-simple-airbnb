<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <form class="d-flex" role="add-flat">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
      <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary"%>
    </form>
  </div>
</nav>

<div class="container">
  <h1>Add a new Flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit 'Create Flat', class: "btn btn-primary"%>
  <% end %>
  <br>
  <%= link_to "Back", flats_path, class: "btn btn-primary"%>
</div>
