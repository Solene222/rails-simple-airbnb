
<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <form class="d-flex" role="add-flat">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
      <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary"%>
    </form>
  </div>
</nav>

<h1>All our Flats (<%= @flats.count %>)</h1>
<div class="container">
  <div class="d-flex justify-content-between flex-wrap">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;" m-3>
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5><%= flat.name%></h5>
          <p> <%=flat.address %></p>
        </div>
        <div class="d-flex">
          <i class="fa-solid fa-user-group"><%= flat.number_of_guests %></i>
          <i class="fa-solid fa-euro-sign"><%= flat.price_per_night %></i>
        </div>
        <div class="card-body">
          <%= link_to "More info", flat_path(flat) %>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
