<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <form class="d-flex" role="add-flat">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
      <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary"%>
    </form>
  </div>
</nav>
<img src="" alt="">
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card mb-3">
        <div class="card-body bg-light">
          <h1><%=@flat.name%></h1>
          <h2><%= @flat.address %></h2>
        </div>
      </div>
      <div class="card">
        <div class="card-body bg-light">
          <h3>A bit more about this flat...</h1>
          <p><%= @flat.description %></p>
          <img src='https://api.mapbox.com/styles/v1/mapbox/streets-v12/static/geojson(%7B%22type%22%3A%22Point%22%2C%22coordinates%22%3A%5B-73.99%2C40.7%5D%7D)/<%= @flat.address %>/500x300?access_token=pk.eyJ1Ijoic29sZW5lYmMiLCJhIjoiY2x4bHEwbm94MDB3YzJscjRhdmlsbTdnOCJ9.IbEn91CB66OHX7QPjSyplw'>
        </div>
      </div>
    </div>

    <div class="col-4">
        <div class="flat-show-card bg-light p-3 mb-3 border border-black">
          <h5>Book this place!</h5>

          <form action="">
            <div class="input-group">
              <span class="input-group-text" id="start-date-label">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-text" id="end-date-label">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>

        <div class="flat-show-card bg-light p-3 mb-3 border border-black">
          <h3>Details</h3>
          <div class="d-flex">
            <div class="flex b">
              <%= @flat.number_of_guests %> people
            </div>
            <div class="flex ms-3">
              <%= @flat.price_per_night %>â‚¬
            </div>
          </div>
        </div>

        <div class="flat-show-card bg-light p-3 mb-3 border border-black">
          <div class="d-flex justify-content-between">
            <h6 class="no-mb">Share</h6>
            <div class="flex">
              <i class="fa-brands fa-facebook-square me-2"></i>
              <i class="fa-brands fa-twitter-square me-2"></i>
              <i class="fa-brands fa-pinterest-square me-2"></i>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
